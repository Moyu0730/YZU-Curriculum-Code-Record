{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run OpenCV",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.exe",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/cpp/opencv/build-mingw/install/bin;${env:PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
            "preLaunchTask": "build"
        }
    ]
}
